    function translateText() {
      const input = document.getElementById("inputText").value.toUpperCase();
      let symbolResult = "";
      let pronResult = "";

      let i = 0;
      while (i < input.length) {
        let found = false;
        // Try two-letter combos (like BA, CE, etc.)
        if (i + 1 < input.length) {
          const pair = input.substring(i, i + 2);
          if (dictionary[pair]) {
            symbolResult += dictionary[pair].symbol + " ";
            pronResult += dictionary[pair].pron + " ";
            i += 2;
            found = true;
            continue;
          }
        }
        // Try single letter
        const single = input[i];
        if (dictionary[single]) {
          symbolResult += dictionary[single].symbol + " ";
          pronResult += dictionary[single].pron + " ";
        } else if (single === " ") {
          symbolResult += "   ";
          pronResult += "   ";
        } else {
          symbolResult += single + " ";
          pronResult += single + " ";
        }
        i++;
      }

      document.getElementById("symbolOutput").textContent = symbolResult.trim();
      document.getElementById("pronOutput").textContent = pronResult.trim();
    }
